<form action="/checkout/" method="post">

	{% if section.settings.enable-variants %}
	{% if product.variants.size == 1 %}
		<input type="hidden" name="id" value="{{ product.variants.first.id }}" />
	{% else %}
		<select name="id">
			{% for variant in product.variants %}
				<option value="{{ variant.id }}">{{ variant.title }}</option>
			{% endfor %}
		</select>
	{% endif %}
	{% endif %}

	<div>
		<input type="submit" name="add" value="To Checkout" class="for-loop-index-{{ forloop.index }} {{ product.id }} enable-cart-btns"></input>
	</div>  
</form>